{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/frontend",
  "projectType": "application",
  "targets": {
    "theme": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run @sps/shared-frontend-utils-server:build"
          },
          {
            "command": "node dist/libs/shared/frontend/utils/server/src/lib/create-tailwind-theme.js"
          }
        ]
      }
    },
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "rm -rf apps/frontend/.next"
          },
          {
            "command": "nx run frontend:theme"
          }
        ]
      }
    },
    "dev": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "dependsOn": ["^build"],
      "options": {
        "buildTarget": "frontend:build",
        "dev": true,
        "port": 3000,
        "turbo": true
      }
    },
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^build"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "apps/frontend"
      }
    },
    "start": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "production",
      "dependsOn": ["^build"],
      "options": {
        "buildTarget": "frontend:build",
        "dev": false,
        "port": 3000
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "frontend:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/frontend/jest.config.ts"
      }
    },
    "lint": {}
  },
  "tags": []
}
